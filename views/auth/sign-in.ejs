<%- include("../partial/header.ejs")%>
<div class="container-fluid authBox">
    <img src="/static/image/index/panda-black.svg" alt="" class="indexImg">

    <a class="authbtn btn btn-outline-dark" href="/auth/google">
        Sign in with <img src="/static/image/account/google.svg" alt="google" class="authImg">
    </a>
    <hr class="authItem">
    <form class="authForm" action="/auth/sign-in" method="POST">
        <div class="authItem">
            <label for="account">Account</label>
            <input type="email" name="account" id="account" placeholder="Your email">
        </div>
        <div class="authItem">
            <label for="password">Password </label>
            <input type="password" name="password" id="password" placeholder="Your password">
        </div>
        <%if (message.length != 0) {%>
            <span class="authWarning"><%=message%></span>
            <%}%>
        <button class="authbtn btn btn-outline-dark" type="submit">Sign in</button>
    </form>
</div>